{%- if section.blocks.size > 0 -%}
  <div {% render 'color-scheme-attributes' with scoped_settings: section.settings, borders: true %}>
    <div
      class="rich-text padding--section {{ section.settings.horizontal_alignment }}" style="{% render 'padding-override' with settings: section.settings %}">
      <div class="container container--{{ section.settings.container_width }}">
        <div class="rich-text__blocks rte rte--loose justify-{{ section.settings.horizontal_alignment }} {{ section.settings.horizontal_alignment }}">
          {%- content_for 'blocks' -%}
        </div>
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "t:rich-text",
  "tag": "section",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    },
    {
      "type": "_video"
    }
  ],
  "disabled_on": {
    "groups": [
      "header",
      "custom.overlay"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:layout"
    },
    {
      "type": "select",
      "id": "horizontal_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:left"
        },
        {
          "value": "center",
          "label": "t:center"
        },
        {
          "value": "right",
          "label": "t:right"
        }
