

<div {% render 'color-scheme-attributes' with scoped_settings: section.settings %}>
  <div class="bottom-bar{% if section.settings.show_borders %} border--top{% endif %} padding--section"  style="{% render 'padding-override' with settings: section.settings %}">
    <div class="container container--xl">
      <div class="bottom-bar__grid" style="--gap-vertical: {{ section.settings.vertical_spacing }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {% when 'localization' %}
              <div
                class="bottom-bar__item bottom-bar__item--localization bottom-bar__item--{{ block.settings.block_size }} bottom-bar__item--{{ block.settings.horizontal_alignment }}"
                {{ block.shopify_attributes }}
              >
                {%- if localization.available_countries.size > 1 and block.settings.enable_country_selector -%}
                  <div>
                    <h2 class="visually-hidden" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                    <localization-form>
                      {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
                        {%- render 'country-localization', localPosition: 'FooterCountry', alignment: section.settings.horizontal_alignment, vertical_alignment: 'bottom', button_class: 'caption-xs' -%}
                      {%- endform -%}
                    </localization-form>
                  </div>
                {%- endif -%}
                {%- if localization.available_languages.size > 1 and block.settings.enable_language_selector  -%}
                  <div>
                    <h2 class="visually-hidden" id="FooterLanguageLabel">{{ 'localization.language_label' | t }}</h2>
                    <localization-form>
                      {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
                        {%- render 'language-localization', localPosition: 'FooterLanguage', alignment: section.settings.horizontal_alignment, vertical_alignment: 'bottom', button_class: 'caption-xs' -%}
                      {%- endform -%}
                    </localization-form>
                  </div>
                {%- endif -%}
              </div>
            {%- when 'link_list' -%}
              {%- if block.settings.menu != blank -%}
                <ul class="bottom-bar__item bottom-bar__item--{{ block.settings.block_size }} bottom-bar__item--menu bottom-bar__item--{{ block.settings.horizontal_alignment }} list-unstyled" {{ block.shopify_attributes }}>
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="bottom-bar__menu-item footer__menu-item caption justify-{{ block.settings.horizontal_alignment }} link-hover-underline">
                        <span class="bottom-bar__item-text">{{ link.title }}</span>
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            {%- when 'payment_types' -%}
              {%- if shop.enabled_payment_types.size > 0 -%}
                <div
                  class="bottom-bar__item bottom-bar__item--{{ block.settings.block_size }} bottom-bar__item--payment-types bottom-bar__item--{{ block.settings.horizontal_alignment }} "
                  style="--horizontal-alignment: {{ block.settings.horizontal_alignment }};"
                  {{ block.shopify_attributes }}
                >
                  {%- for type in shop.enabled_payment_types -%}
                    {{- type | payment_type_svg_tag -}}
                  {%- endfor -%}
                </div>
              {%- endif -%}
            {%- when 'policy_links' -%}
              <ul class="bottom-bar__item bottom-bar__item--{{ block.settings.block_size }} bottom-bar__item--menu bottom-bar__item--{{ block.settings.horizontal_alignment }} list-unstyled" {{ block.shopify_attributes }}>
                {%- for policy in shop.policies -%}
                  <li>
                    <a href="{{ policy.url }}" class="bottom-bar__menu-item footer__menu-item caption justify-{{ block.settings.horizontal_alignment }} link-hover-underline">
                      <span class="bottom-bar__item-text">{{ policy.title | escape }}</span>
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- when 'copyright' -%}
              <div
                class="bottom-bar__item bottom-bar__item--{{ block.settings.block_size }} bottom-bar__item--{{ block.settings.horizontal_alignment }} caption list-separator list-separator--text"
                {{ block.shopify_attributes }}
              >
                <span class="bottom-bar__item-text list-separator__item">Â© {{ 'now' | date: '%Y' }} {{ shop.name }}</span>
                <span class="bottom-bar__item-text list-separator__item powered-by-shopify">{{ powered_by_link }}</span>
              </div>
            {%- when 'spacer' -%}
              <div aria-hidden="true" class="hidden md:block"></div>
           {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

