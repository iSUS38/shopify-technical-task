{%- assign product_match = cart.items | where: 'product_id', block.settings.product.id -%}
{%- if product_match.size == 0 -%}
  <div class="flex justify-{{ section.settings.horizontal_alignment }}" {{  block.shopify_attributes }}>
    {%- case block.settings.style -%}
      {%- when 'card' -%}
        {% render 'mini-product-card' with scoped_settings: block.settings, override_settings: section.settings %}
      {%- when 'list' -%}
        {% render 'mini-product-list' with scoped_settings: block.settings, override_settings: section.settings %}
    {%- endcase -%}
  </div>
{%- endif -%}


