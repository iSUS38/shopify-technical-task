<script src="{{ 'menu-drawer.js' | asset_url }}" type="module"></script>

<menu-drawer data-modal="true" data-overlay="true" data-name="menu-drawer">
  <dialog class="menu-drawer__drawer dialog">
    <div
      class="menu-drawer__dialog-window dialog__animateable dialog__window"
      data-color-scheme="{{ section.settings.color_scheme }}"
      {% if section.settings.enable_color_scheme_transition %}
        data-color-scheme-original="{{ section.settings.color_scheme }}"
        data-color-scheme-transition="{{ section.settings.color_scheme_transition }}"
      {% endif %}
    >
      <div class="menu-drawer__header">
        {% render 'close-button', class: 'menu-drawer__close' %}
      </div>
      <nav class="menu-drawer__body">
        <div class="menu-drawer__menu" data-state="current" id="primary">
          <ul class="menu-drawer__list">
            {%- for link in section.settings.menu.links -%}
              <li class="menu-drawer__item">
                {%- if link.links != blank -%}
                  <button
                    class="menu-drawer__link menu-drawer__link--button button-unstyled"
                    aria-expanded="false"
                    aria-controls="primary-{{ link.title | handleize }}"
                    data-submenu
                  >
                    <span>{{- link.title | escape -}}</span>
                    {% render 'icon' with 'arrow-right', class: 'icon--s' %}
                  </button>
                {%- else -%}
                  <a
                    href="{{ link.url }}"
                    class="menu-drawer__link"
                    {% if link.current %}
                      aria-current="page"
                    {% endif %}
                  >
                    {{- link.title | escape -}}
                  </a>
                {%- endif -%}
              </li>
            {%- endfor -%}
          </ul>
          {% render 'sidebar-promo', link_title: '' %}
          <div class="menu-drawer__primary-footer">
            <div class="menu-drawer__primary-footer-actions">
              {%- if section.settings.enable_search -%}
                <search-button>
                  <a href="{{ routes.search_url }}" class="menu-drawer__secondary-link caption button-unstyled">
                    {{ 'search.search' | t }}
                  </a>
                </search-button>
              {%- endif -%}
              {%- if shop.customer_accounts_enabled -%}
                <a
                  href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                  class="menu-drawer__secondary-link caption"
                  rel="nofollow"
                >
                  <span>
                    {%- liquid
                      if customer
                        echo 'customer.account_fallback' | t
                      else
                        echo 'customer.log_in' | t
                      endif
                    -%}
                  </span>
                </a>
              {%- endif -%}
              <div class="menu-drawer__localization">
                {%- if localization.available_countries and localization.available_countries.size > 1 -%}
                  <localization-form>
                    {%- form 'localization', id: 'MenuDrawerCountryMobileForm', class: 'localization-form', aria-labelledby: "MenuDrawerCountryMobileLabel" -%}
                      <h2 class="visually-hidden" id="MenuDrawerCountryMobileLabel">
                        {{ 'localization.country_label' | t }}
                      </h2>
                      {%- render 'country-localization', localPosition: 'MenuDrawerCountryMobile' -%}
                    {%- endform -%}
                  </localization-form>
                {% endif %}
                {%- if localization.available_languages and localization.available_languages.size > 1 -%}
                  <localization-form>
                    {%- form 'localization', id: 'MenuDrawerLanguageMobileForm', class: 'localization-form', aria-labelledby: "MenuDrawerLanguageMobileLabel" -%}
                      <div>
                        <h2 class="visually-hidden" id="MenuDrawerLanguageMobileLabel">
                          {{ 'localization.language_label' | t }}
                        </h2>
                        {%- render 'language-localization', localPosition: 'MenuDrawerLanguageMobile' -%}
                      </div>
                    {%- endform -%}
                  </localization-form>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
        {% for link in section.settings.menu.links %}
          {%- if link.links != blank -%}
            {% assign link_title = link.title | escape %}
            <div class="menu-drawer__menu v-stack" id="primary-{{ link.title | handleize }}" data-state="next">
              <ul class="menu-drawer__list">
                <li class="menu-drawer__item">
                  <button
                    class="menu-drawer__link menu-drawer__link--back button-unstyled"
                    aria-controls="primary"
                    data-back
                  >
                    {% render 'icon' with 'arrow-left', class: 'icon--s' %}
                    <span>{{- link_title -}}</span>
                  </button>
                </li>
                {%- for childlink in link.links -%}
                  <li class="menu-drawer__item">
                    {%- if childlink.links != blank -%}
                      <button
                        class=" menu-drawer__link menu-drawer__link--button button-unstyled "
                        aria-controls="{{ link.title | handleize }}-{{ childlink.title | handleize }}"
                        data-submenu
                      >
                        <span>{{- childlink.title | escape -}}</span>
                        {% render 'icon' with 'arrow-right', class: 'icon--s' %}
                      </button>
                    {%- else -%}
                      <a
                        href="{{ childlink.url }}"
                        class="menu-drawer__link"
                        {% if childlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        {{- childlink.title | escape -}}
                      </a>
                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
              {% render 'sidebar-promo', link_title: link.title %}
            </div>
          {%- endif -%}
          {%- for childlink in link.links -%}
            {%- if childlink.links != blank -%}
              <div
                class="menu-drawer__menu"
                id="{{ link.title | handleize }}-{{ childlink.title | handleize }}"
                data-state="next"
              >
                <ul
                  id="menu__drawerMenu-SubMenuList"
                  class="menu-drawer__list"
                >
                  <li class="menu-drawer__item">
                    <button
                      class="menu-drawer__link menu-drawer__link--back button-unstyled"
                      aria-controls="primary-{{ link.title | handleize }}"
                      data-back
                    >
                      {% render 'icon' with 'arrow-left', class: 'icon--s' %}
                      <span>{{- childlink.title | escape -}}</span>
                    </button>
                  </li>
                  {%- for grandchildlink in childlink.links -%}
                    <li class="menu-drawer__item">
                      <a
                        href="{{ grandchildlink.url }}"
                        class="menu-drawer__link"
                        {% if grandchildlink.current %}
                          aria-current="page"
                        {% endif %}
                      >
                        {{- grandchildlink.title | escape -}}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
                {% render 'sidebar-promo', link_title: childlink.title %}
              </div>
            {% endif %}
          {%- endfor -%}
        {%- endfor -%}
      </nav>
    </div>
  </dialog>
</menu-drawer>


{% schema %}
{
  "name": "t:sidebar-menu",
  "class": "dialog-section",
  "enabled_on": {
    "groups": [
      "custom.overlay"
    ]
  },
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:menu"
    },
    {
      "type": "checkbox",
      "id": "enable_search",
      "label": "t:enable-search",
      "default": true
    },
    {
      "type": "header",
      "content": "t:colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:color-scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "enable_color_scheme_transition",
      "label": "t:use-color-scheme-transition",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme_transition",
      "label": "t:transition-color-scheme",
      "default": "scheme-2"
    }
  ],
  "blocks": [
    {
      "type": "promo",
      "name": "t:promotion",
      "settings": [
        {
          "type": "text",
          "label": "t:menu-item",
          "id": "menu",
          "info": "t:leave-blank-to-show-at-the-top-level"
        },
        {
          "type": "image_picker",
          "label": "t:image",
          "id": "image"
        },
        {
          "type": "select",
          "id": "image_ratio",
          "options": [
            {
              "value": "default",
              "label": "t:adapt-to-image"
            },
            {
              "value": "2 / 3",
              "label": "t:portrait"
            },
            {
              "value": "1",
              "label": "t:square"
            },
            {
              "value": "3 / 2",
              "label": "t:landscape"
            }
          ],
          "default": "default",
          "label": "t:image-ratio"
        },
        {
          "type": "text",
          "id": "label",
          "label": "t:label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:link"
        }
      ]
    }
  ]
}
{% endschema %}