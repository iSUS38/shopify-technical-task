{% # theme-check-disable UnusedAssign %}
{%- liquid
  assign fetch_priority = 'auto'
  assign loading = 'lazy'
  if section.index == 1 and section.location != 'footer'
    assign fetch_priority = 'high'
    assign loading = 'eager'
  endif

  assign sizes = '100vw'
-%}

{% # theme-check-enable UnusedAssign %}

<div {% render 'color-scheme-attributes' with scoped_settings: section.settings, borders: true %} data-support-transparent-header>
  <div class="container container--{{ section.settings.container_type }} padding--section" style="{% render 'padding-override' with settings: section.settings %}">
    {%- render 'external-video',
      poster: section.settings.poster,
      media: section.settings.external_video,
      description: section.settings.description,
      button_style: section.settings.button_style,
      fetchpriority: fetch_priority,
      sizes: sizes,
      autoplay: section.settings.enable_autoplay,
    -%}
  </div>
</div>

