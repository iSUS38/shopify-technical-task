{% # theme-check-disable UnusedAssign %}
{%- liquid
  assign fetch_priority = 'auto'
  assign loading = 'lazy'
  if section.index == 1 and section.location != 'footer'
    assign fetch_priority = 'high'
    assign loading = 'eager'
  endif
-%}

{%- render 'media-banner-padding', with settings: section.settings, id: section.id %}

{%- capture content -%}
  {%- if section.settings.height != 'small' -%}{%- assign rte_class = 'rte--loose' -%}{%- endif -%}
  <div class="media-banner__content-inner justify-{{ section.settings.horizontal_alignment }} {{ section.settings.horizontal_alignment }} container--width container--{{ section.settings.container_width }} rte {{ rte_class }}">
    {%- content_for 'blocks' -%}
  </div>
{%- endcapture -%}

<div {% render 'color-scheme-attributes' with scoped_settings: section.settings, borders: true, class: 'media-banner-section' %} data-support-transparent-header>
  <div class="padding--section" style="{% render 'padding-override' with settings: section.settings %}">
     <div class="container container--{{ section.settings.container_type }}">
      {%-
        render 'media-banner', with
        settings: section.settings,
        content: content,
        id: section.id,
        fetch_priority: fetch_priority,
        loading: loading,
        enable_banner_click: section.settings.enable_banner_click
      -%}
    </div>
  </div>
</div>
{% # theme-check-enable UnusedAssign %}

