{% # theme-check-disable UnusedAssign %}
{%- liquid
  assign fetch_priority = 'auto'
  assign loading = 'lazy'
  if section.index == 1 and section.location != 'footer'
    assign fetch_priority = 'high'
    assign loading = 'eager'
  endif
-%}

{%- render 'media-banner-padding', with settings: section.settings, id: section.id %}

{%- capture content -%}
  <div class="shoppable-banner__products v-stack media-banner__pointer ">
    {% content_for 'blocks' %}
  </div>
{%- endcapture -%}

<div {% render 'color-scheme-attributes' with scoped_settings: section.settings, borders: true, class: 'media-banner-section' %} data-support-transparent-header>
  <div class="padding--section" style="{% render 'padding-override' with settings: section.settings %}">
    <div class="container container--{{ section.settings.container_type }} shoppable-banner">
      {%- render 'media-banner', with settings: section.settings, content: content, id: section.id, class: 'shoppable-banner', fetch_priority: fetch_priority, loading: loading -%}
    </div>
  </div>
</div>
